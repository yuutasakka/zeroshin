# MoneyTicket Environment Variables Template
# Copy this file to .env and replace with your actual values

# ======================
# セキュリティ関連（必須）
# ======================
# 32文字のランダム文字列を設定してください
VITE_ENCRYPTION_KEY=your_32_character_encryption_key_here
VITE_JWT_SECRET=your_32_character_jwt_secret_here
VITE_SESSION_SECRET=your_32_character_session_secret_here

# ======================
# AI / MCP関連（必須）
# ======================
# Google AI Studio で取得したAPIキー
GEMINI_API_KEY=your_google_gemini_api_key_here
GOOGLE_API_KEY=your_google_gemini_api_key_here

# ======================
# Supabase関連（必須）
# ======================
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here
VITE_SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# React App用（互換性のため）
REACT_APP_SUPABASE_URL=https://your-project-id.supabase.co
REACT_APP_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# 従来のNext.js形式（互換性のため）
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ======================
# SMS/通知関連（オプション）
# ======================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# ======================
# 開発環境設定
# ======================
