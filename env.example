DEV_JWT_SECRET=dev_jwt_secret_only_for_development
DEV_SESSION_SECRET=dev_session_secret_only_for_development

# ======================
# セキュリティAPI（オプション）
# ======================
SNYK_API_TOKEN=your_snyk_api_token
VIRUSTOTAL_API_KEY=your_virustotal_api_key
NIST_NVD_API_KEY=your_nist_nvd_api_key
OWASP_ZAP_API_KEY=your_owasp_zap_api_key
SHODAN_API_KEY=your_shodan_api_key

# ======================
# 通知設定（オプション）
# ======================
SLACK_WEBHOOK_URL=your_slack_webhook_url
DISCORD_WEBHOOK_URL=your_discord_webhook_url
EMAIL_SERVICE_API_KEY=your_email_service_api_key

# ======================
# 環境設定
# ======================
NODE_ENV=development
API_BASE_URL=http://localhost:8080

# Security Keys (Generate new secure random strings)
ENCRYPTION_KEY=your-32-character-encryption-key-here
JWT_SECRET=your-32-character-jwt-secret-key-here
SESSION_SECRET=your-32-character-session-secret-here

# Node Environment
NODE_ENV=development

# SMS/Twilio Configuration (for Phone Verification)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Security API Keys (for SecurityIntegration component)
# Vulnerability Scanning
SNYK_API_TOKEN=your-snyk-api-token
VIRUSTOTAL_API_KEY=your-virustotal-api-key
NIST_NVD_API_KEY=your-nist-nvd-api-key

# Penetration Testing
OWASP_ZAP_API_KEY=your-owasp-zap-api-key
SHODAN_API_KEY=your-shodan-api-key

# Compliance & Monitoring
SECURITY_SCORECARD_API_KEY=your-security-scorecard-api-key
THREATSTACK_API_KEY=your-threatstack-api-key

# AI Security Analysis (Optional)
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Notification Services (Optional)
SLACK_WEBHOOK_URL=your-slack-webhook-url
DISCORD_WEBHOOK_URL=your-discord-webhook-url
EMAIL_SERVICE_API_KEY=your-email-service-api-key

# Production Deployment Notes:
# 1. Generate secure random strings for all keys (minimum 32 characters)
# 2. Use proper Supabase project URLs and keys
# 3. Set NODE_ENV=production for production builds
# 4. NEVER commit .env files to version control
# 5. For MCP-compatible APIs, keys may be auto-managed
# 6. Most security APIs offer free tiers - check their documentation 