# ========================================
# Zeroshin Admin - Environment Variables Template
# 環境変数設定テンプレート
# ========================================

# このファイルを .env.local にコピーして実際の値を設定してください
# 本番環境では .env.production を使用してください

# ========================================
# Supabase Configuration
# ========================================

# Supabase Project URL (必須)
# Supabaseコンソールの Settings > API から取得
VITE_SUPABASE_URL=https://your-project-ref.supabase.co

# Supabase Anon Key (必須)
# Supabaseコンソールの Settings > API から取得
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# Supabase Service Role Key (サーバーサイドのみ、取り扱い注意)
# 管理者機能で必要な場合のみ使用
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# ========================================
# Application Configuration
# ========================================

# 実行環境 (development | production | test)
NODE_ENV=development

# アプリケーションのベースURL
VITE_APP_BASE_URL=http://localhost:5173

# 管理者パネルのURL
VITE_ADMIN_URL=http://localhost:5173/admin

# ========================================
# Security Configuration
# ========================================

# JWT Secret Key (本番環境では必ず変更)
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production

# CSRF Protection Secret
CSRF_SECRET=your-csrf-secret-key

# セッションタイムアウト (分)
SESSION_TIMEOUT_MINUTES=60

# パスワードリセットトークンの有効期限 (時間)
PASSWORD_RESET_EXPIRES_HOURS=24

# ========================================
# SMS Configuration (Twilio推奨)
# ========================================

# SMS送信サービスの選択 (twilio | aws-sns | custom)
SMS_PROVIDER=twilio

# Twilio Configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# AWS SNS Configuration (Twilioの代替)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-northeast-1
AWS_SNS_SENDER_ID=ZeroShin

# ========================================
# Email Configuration
# ========================================

# メール送信サービスの選択 (sendgrid | ses | smtp)
EMAIL_PROVIDER=sendgrid

# SendGrid Configuration
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@zeroshin.com
SENDGRID_FROM_NAME=ZeroShin Admin

# SMTP Configuration (SendGridの代替)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# ========================================
# Logging & Monitoring
# ========================================

# ログレベル (error | warn | info | debug)
LOG_LEVEL=info

# ログ出力先 (console | file | both)
LOG_OUTPUT=console

# エラー追跡サービス (optional)
SENTRY_DSN=your-sentry-dsn

# ========================================
# Rate Limiting
# ========================================

# API レート制限 (requests per minute)
RATE_LIMIT_MAX=100

# ログイン試行制限 (attempts per hour)
LOGIN_RATE_LIMIT=5

# SMS送信制限 (per phone number per day)
SMS_RATE_LIMIT=10

# ========================================
# File Upload Configuration
# ========================================

# ファイルアップロードの最大サイズ (MB)
MAX_FILE_SIZE_MB=5

# 許可するファイル形式
ALLOWED_FILE_TYPES=jpg,jpeg,png,webp,pdf

# Supabase Storage Bucket名
STORAGE_BUCKET_NAME=profile-images

# ========================================
# Development Configuration
# ========================================

# 開発環境での詳細ログ出力
VITE_DEBUG_MODE=true

# 開発環境でのモックデータ使用
USE_MOCK_DATA=false

# 開発環境でのSMS送信スキップ
SKIP_SMS_IN_DEV=true

# 開発環境でのメール送信スキップ
SKIP_EMAIL_IN_DEV=true

# ========================================
# Performance Configuration
# ========================================

# データベース接続プールサイズ
DB_POOL_SIZE=10

# API応答タイムアウト (秒)
API_TIMEOUT_SECONDS=30

# キャッシュ有効期限 (秒)
CACHE_TTL_SECONDS=300

# ========================================
# Backup & Maintenance
# ========================================

# 自動バックアップの有効化
AUTO_BACKUP_ENABLED=true

# バックアップ間隔 (時間)
BACKUP_INTERVAL_HOURS=24

# 古いデータの自動削除間隔 (日)
DATA_CLEANUP_INTERVAL_DAYS=30

# ========================================
# Compliance & Privacy
# ========================================

# GDPR コンプライアンス有効化
GDPR_COMPLIANCE=true

# データ保持期間 (日)
DATA_RETENTION_DAYS=365

# プライバシーポリシーURL
PRIVACY_POLICY_URL=https://zeroshin.com/privacy

# 利用規約URL
TERMS_OF_SERVICE_URL=https://zeroshin.com/terms

# ========================================
# Feature Flags
# ========================================

# 新規登録の許可
ALLOW_NEW_REGISTRATIONS=true

# SMS認証の有効化
ENABLE_SMS_AUTH=true

# メール認証の有効化
ENABLE_EMAIL_AUTH=true

# 二段階認証の強制
REQUIRE_2FA=false

# ========================================
# Analytics & Tracking
# ========================================

# Google Analytics ID (optional)
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# その他の分析ツール
MIXPANEL_TOKEN=your-mixpanel-token

# ========================================
# 設定完了後のチェックリスト
# ========================================

# ✅ Supabase URL と Anon Key の設定
# ✅ JWT Secret の本番用変更
# ✅ SMS/Email サービスの設定
# ✅ セキュリティ設定の確認
# ✅ 本番環境での機密情報の適切な管理
# ✅ ログレベルの本番用調整
# ✅ レート制限の適切な設定
# ✅ バックアップ設定の有効化