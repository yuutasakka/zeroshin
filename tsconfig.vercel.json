{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "declaration": false,
    "outDir": "./dist",
    "rootDir": "./",
    "typeRoots": ["./node_modules/@types"]
  },
  "include": [
    "api/**/*",
    "utils/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src"
  ]
}