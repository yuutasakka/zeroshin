# Zero神 環境変数設定例
# 実際の運用時は .env ファイルにコピーして値を設定してください

# アプリケーション設定
NODE_ENV=development
PORT=3000
DOMAIN=localhost

# ビルド情報
BUILD_DATE=
VCS_REF=
VERSION=1.0.0

# Supabase設定
VITE_SUPABASE_URL=your-supabase-url
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_URL=your-supabase-url
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# LINE認証設定（メイン認証システム）
VITE_LINE_CHANNEL_ID=your-line-channel-id
LINE_CHANNEL_ID=your-line-channel-id
LINE_CHANNEL_SECRET=your-line-channel-secret
LINE_REDIRECT_URI=https://zeroshin.vercel.app/api/line-callback

# JWT設定
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters

# Redis設定
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password
REDIS_CONFIG_SECRET=config-rename-secret
REDIS_SHUTDOWN_SECRET=shutdown-rename-secret

# データベース設定（開発環境）
POSTGRES_DB=zeroshin_dev
POSTGRES_USER=zeroshin
POSTGRES_PASSWORD=password123

# 監視設定
LOG_LEVEL=info
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin123

# セキュリティ設定
ENCRYPTION_KEY=your-32-character-encryption-key
CSRF_SECRET=your-csrf-secret-key
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# 外部API設定
SENTRY_DSN=your-sentry-dsn
WEBHOOK_SECRET=your-webhook-secret

# SSL設定（本番環境）
SSL_CERT_PATH=/etc/ssl/certs/zeroshin.crt
SSL_KEY_PATH=/etc/ssl/private/zeroshin.key

# メール設定
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@zeroshin.co.jp
SMTP_PASS=your-smtp-password
FROM_EMAIL=noreply@zeroshin.co.jp
FROM_NAME=Zero神

# クラウド設定
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-northeast-1
S3_BUCKET=zeroshin-assets

# CDN設定
CDN_URL=https://cdn.zeroshin.co.jp

# 機能フラグ
FEATURE_LINE_AUTH=true
FEATURE_ADMIN_PANEL=true

# PDFプレゼント特典
NEXT_PUBLIC_PDF_BEGINNERS_GUIDE_URL=
FEATURE_MONITORING=true

# 暗号資産取引所アフィリエイトリンク
VITE_AFF_COINCHECK=
VITE_AFF_GMO=
VITE_AFF_BITBANK=
VITE_AFF_BITFLYER=
VITE_AFF_SBIVC=
VITE_AFF_OKJ=
VITE_AFF_BITPOINT=